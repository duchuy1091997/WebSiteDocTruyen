@using WebSiteDocTruyen.Models
@model List<Sach>
@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (Model.Count == 0)
    {
        @ViewBag.Sach
    }
}
@{
    foreach (var sach in Model)
    {
        <div class="SanPham">
            <div class="HinhAnhSP">
                <img src="@Url.Content("~/img/SachImgs/"+ sach.AnhBia)" alt="BooksCover">
            </div>
            <div class="ThongTinsp">
                <span class="TenSP">@sach.TenSach</span><br />
                <div>
                    <span class="gia">@sach.GiaBan Đồng</span>
                </div>
            </div>
            <input type="button" name="btnXemThu" value="Xem Thử" />
        </div>
    }
}


